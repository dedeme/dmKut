/// Program start.

import "dm/cgi";
import "dm/log";
import "data/cts";
import "db";
import "web";
import "tests";
import "update";

help = "Usage: Bet1x2 [update | test | resetLog | help | <request>]";

args = sys.args();
if (arr.size(args) != 1) {
  sys.println(help);
  return;
}

rq = sys.args()[0];
if (!map.hasKey(sys.environ(), "USER")) {
  cgi.init(cts.webHome, 900);
  log.init(path.cat([cts.dbHome, "log.tb"]), false);
  web.process(rq);
} else {
  db.init();
  switch (rq) {
    "update": update.run();
    "tests": tests.run();
    "resetLog": log.reset();
    default: sys.println(help);
  }
}
