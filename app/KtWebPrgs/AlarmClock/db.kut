/// Data base of jstb's.

import "libdm/jstb";
import "KtWeb/global";
import "data/cts";
import "data/alarm";

DbPath = [""];

/// Initializes data base.
/// \-> ()
init = \ -> {
  dbPath = path.cat([global.cgiRoot, cts.appName]);
  DbPath! = dbPath;
  if (!file.exists(dbPath)) file.mkdir(dbPath);
};

/// Returns the table of 'a<alarm>' in "alarms.tb"
/// \-> m<jsdb>
alarmsTb = \-> return jstb.newArr(
  DbPath! + "/alarms.tb",
  \-> return "[]";,
  alarm.toJs,
  alarm.fromJs
);;

