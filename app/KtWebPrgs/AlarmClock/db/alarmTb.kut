/// [<alarm>.] table.

import "cts";
import "data/alarm";
import "db";

:file fpath = file.cat([cts.dataPath, "alarm.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> if (!fpath.exists()) write([]);;

/// Reads table.
/// \ -> [<alarm>.]
read = \ -> return arr.map(js.r(fpath.read()), alarm.fromJs);;

/// Writes table.
/// \[<alarm>.] -> ()
write = \tb -> fpath.write(js.w(tb));;
