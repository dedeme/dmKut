/// Client to server channel.

/// Actions enumeration
start, stop :;

/// Constructor.
///   action: One of 'start' or 'stop'
///   source: Backup source.
///   target: Backup source.
/// \s,s,s -> <fromClient>
new : action, source, target;

/// Equals to new(stop, "", "");
newDefault = \ -> return new(stop, "", "");;

/// \<fromClient>, s -> ()
setAction = \O, v -> O[action] = v;;
