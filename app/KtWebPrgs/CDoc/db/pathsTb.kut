/// [<paths>.] table.

import "cts";
import "data/dpath";
import "db";

fpath = file.cat([cts.dataPath, "paths.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> if (!file.exists(fpath)) write([]);;

/// Reads table.
/// \ -> [<dpath>.]
read = \ -> return arr.map(
    js.r(file.read(fpath)),
    \:dpath p -> {
        p.setIsValid(file.isDirectory(p.spath));
        return p;
      }
  );;

/// Writes table.
/// \[<dpath>.] -> ()
write = \tb -> file.write(fpath, js.w(tb));;
