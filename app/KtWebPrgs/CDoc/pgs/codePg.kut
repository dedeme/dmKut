/// Module page.

import "KtWeb/rp";
import "data/doc";
import "data/dpath";
import "db";
import "db/pathsTb";

/// Process request.
/// \m -> s
process = \Rq -> {
  switch (Rq.rq) {
    "code": {
      module = Rq.module;
      mpath = Rq.path;
      isHeader = Rq.isHeader;

      codeOp = []; // [s]|[]
      dpathOp = arr.find(
        pathsTb.read(), \:dpath p -> return p.id == module;
      );
      if (!!dpathOp) {
        :dpath pt = dpathOp!;
        fpath = isHeader
          ? path.cat([pt.spath, "include", mpath + ".h"])
          : path.cat([pt.spath, "src", mpath + ".c"])
        ;
        if (file.exists(fpath)) arr.push(codeOp, file.read(fpath));
      }

      return rp.mk({
        codeOp
      });
    }
    default: sys.throw("Value of rq (" + Rq.rq + ") is not valid");
  }
};


