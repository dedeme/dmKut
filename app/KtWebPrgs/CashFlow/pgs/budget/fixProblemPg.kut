/// Budget editor page.

import "KtWeb/rp";
import "db/yearsDb";
import "db/diaryTb";
import "db";

/// \{*.} -> s
process = \Rq -> {
  switch (Rq.rq) {
    "updateDiary": {
      dbKey = db.checkKey(Rq.dbKey);
      if (dbKey == "") return rp.mkOutdated();

      year = Rq.year;
      ypath = yearsDb.yearPath(year);
      diaryTb.writeJs(ypath, js.w(Rq.diary));
      return rp.mk({ dbKey });
    }
    default: sys.throw("Value of rq (" + Rq.rq + ") is not valid");
  }
};

