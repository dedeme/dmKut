/// Budget edit page.

import "KtWeb/rp";
import "db/yearsDb";
import "db/budgetTb";
import "db";

/// \{*.} -> s
process = \Rq -> {
  switch (Rq.rq) {
    "updateBudget": {
      dbKey = db.checkKey(Rq.dbKey);
      if (dbKey == "") return rp.mkOutdated();

      year = Rq.year;
      ypath = yearsDb.yearPath(year);
      budgetTb.writeJs(ypath, js.w(Rq.budget));
      return rp.mk({ dbKey });
    }
    default: sys.throw("Value of rq (" + Rq.rq + ") is not valid");
  }
};
