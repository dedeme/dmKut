/// Home page.

import "libdm/log";
import "KtWeb/rp";
import "db";
import "data/cts";

/// \m -> ()
process = \Rq -> {
  rq = js.rs(Rq.rq);
  switch (rq) {
    "idata": {
      OutErr = sys.cmd("ps", ["-x"]);
      act = str.index(
        OutErr[0],
        "kut /dm/dmKut/app/KtWebPrgs/Kron/main start"
      ) != -1;
      sys.print(rp.mk({
        isActive: js.wb(act & (db.sessionIdTb().read() == "" ? false : true))
      }));
    }
    "getLog": {
      sys.print(rp.mk({
        log: log.readJs()
      }));
    }
    "resetLog": {
      log.reset();
      sys.print(rp.mkEmpty());
    }
    "activate": {
      thread.run(\-> sys.cmd("kut", [cts.mainPath, "start"]););
      sys.sleep(1000);
      sys.print(rp.mkEmpty());
    }
    "stop": {
      db.sessionIdTb().write("");
      sys.print(rp.mkEmpty());
    }
    default: sys.fail("Value of rq (" + rq + ") is not valid");
  }
};

