/// Fix page.

import "KtWeb/rp";
import "KtWeb/global";
import "db";
import "data/ann";

/// \m -> ()
process = \Rq -> {
  switch (Rq.rq) {
    "idata": sys.print(rp.mk({
        anns: arr.map(
            arr.filter(
              db.annsTb().read(),
              \A -> return A[1] == ann.typeMANUAL;
            ),
            ann.toJs
          )
      }));
    "new": {
      Ann = ann.fromJs(Rq.ann);
      AnnTb = db.annsTb();
      Anns = AnnTb.read();
      ann.add(Anns, Ann);
      AnnTb.write(Anns);
      sys.print(rp.mkEmpty());
    }
    "delete": {
      id = math.ftoi(Rq.id);
      AnnTb = db.annsTb();
      Anns = AnnTb.read();
      ann.del(Anns, id);
      AnnTb.write(Anns);
      sys.print(rp.mkEmpty());
    }
    "modify": {
      Ann = ann.fromJs(Rq.ann);
      AnnTb = db.annsTb();
      Anns = AnnTb.read();
      ann.modify(Anns, Ann);
      AnnTb.write(Anns);
      sys.print(rp.mkEmpty());
    }
    "run": {
      id = math.ftoi(Rq.id);
      R = ann.executeId(db.annsTb().read(), id);
      error = R ? R! : "";
      sys.print(rp.mk({
        error: error
      }));
    }
    default: sys.throw("Value of rq (" + Rq.rq + ") is not valid");
  }
};

