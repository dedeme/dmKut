/// Data base management.

import "libdm/log";
import "cts";

/// Initializes data base
/// \ -> ()
init = \ -> {
  if (!file.exists(cts.dataPath)) {
    file.mkdir(cts.dataPath);
    file.write(file.cat([cts.dataPath, "version.tb"]), cts.dataVersion);

    log.reset();
    return;
  }
  sys.throw("Data base already is initialized");
};
