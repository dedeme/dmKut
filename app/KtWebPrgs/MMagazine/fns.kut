/// Global functions.

/// Formats a integer with, at least, two digits.
/// \i -> s
format00 = \n -> {
  r = "" + math.itos(n);
  if (str.len(r) < 2) return "0" + r;
  return r;
};

/// Returns the last sunday (including today) in format YYYYMMDD
/// \-> s
lastSunday = \-> {
  d = time.now();
  return time.toStr(time.addDays(d, -time.weekday(d)));
};
