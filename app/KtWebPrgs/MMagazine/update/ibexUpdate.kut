/// Ibex quotes update.

import "libdm/jstb";
import "fns";
import "db";
import "ex/cmarket/ibex";
import "data/ibexSundays";

/// \-> ()
run = \-> {
  lastSunday = fns.lastSunday();
  today = time.now();
  if (lastSunday != time.toStr(today)) return;

  I = [-2];
  while (I! > -7) {
    day = time.addDays(today, I!);
    V = ibex.read(day);
    if (!!V) {
      :jstb ibexTb = db.ibexTb();
      :ibexSundays Ibex = ibexTb.read#();
      if (time.fmt("%Y", Ibex.data[0][0]) != lastSunday[:4])
        arr.clear(Ibex.data);
      ibexSundays.add(Ibex, today, V!);
      ibexTb.write#(Ibex);
      break;
    }

    I! -= 1;
  }
};

