/// Home page.

import "libdm/log";
import "KtWeb/rp";
import "KtWeb/global";

/// \{*.} -> s
process = \Rq -> {
  switch (Rq.rq) {
    "getLog": {
      log.setPath(global.logPath);
      return rp.mkJs({
        Log: log.readJs()
      });
    }
    "resetLog": {
      log.setPath(global.logPath);
      log.reset();
      return rp.mkEmpty();
    }
    default: sys.throw("Value of rq (" + Rq.rq + ") is not valid");
  }
};
