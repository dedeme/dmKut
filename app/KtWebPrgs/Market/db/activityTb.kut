/// <activity> table.

import "cts";
import "data/activity";

fpath = file.cat([cts.dataPath, "activity.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> if (!file.exists(fpath)) write(activity.newDefault());;

/// Reads table.
/// \ -> <activity>
read = \ -> return activity.fromJs(js.r(file.read(fpath)));;

/// Writes table.
/// \<activity> -> ()
write = \o -> file.write(fpath, js.w(o));;
