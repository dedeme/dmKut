/// Global functions.

import "libdm/log";
import "cts";

/// Returns 'true' if currently the update process is running.
/// \ -> b
isBusy = \ -> {
  rs, ok = sys.cmd("ps", ["-x"]);
  if (!ok) {
    log.error(rs);
    sys.throw(rs);
  }

  return arr.any(
    str.splitTrim(rs, "\n"),
    \l -> return str.ends(l, cts.psCommand);
  );
};
