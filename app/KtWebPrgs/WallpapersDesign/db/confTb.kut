/// Configuration table.

import "cts";
import "data/conf";

fpath = file.cat([cts.dataPath, "conf.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> if (!file.exists(fpath)) write(conf.newDefault());;

/// Reads table.
/// \ -> <conf>
read = \ -> return conf.fromJs(js.r(file.read(fpath)));;

/// Writes table.
/// \<conf> -> ()
write = \o -> file.write(fpath, js.w(o));;
