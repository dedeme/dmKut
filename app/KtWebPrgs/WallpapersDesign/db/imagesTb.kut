/// Images table.

import "cts";
import "data/image";

fpath = file.cat([cts.dataPath, "images.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> if (!file.exists(fpath)) write([]);;

/// Reads table.
/// \ -> [<image>.]
read = \ -> return arr.map(js.r(file.read(fpath)), image.fromJs);;

/// Writes table.
/// \[<image>.] -> ()
write = \tb -> file.write(fpath, js.w(tb));;
