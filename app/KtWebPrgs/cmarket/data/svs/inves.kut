/// Quotes server data INVES ("Investing").

import "data/qsv";
import "libmkt/qs";

// \s -> s
readVol = \tx -> {
  if (!tx) return "0";
  f = str.ends(tx, "K")
    ? math.fromIso(tx[:-1])! * 1000.0
    : str.ends(tx, "M")
      ? math.fromIso(tx[:-1])! * 1000000.0
      : math.fromIso(tx)!
  ;
  return math.itos(math.ftoi(f));
};

