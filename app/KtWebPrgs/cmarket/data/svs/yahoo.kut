// \s -> s
getDate = \date -> {
  // \s -> s
  getMonth = \m -> {
    m = m + "  ";
    switch (m[0]) {
      "d": return "12";
      "n": return "11";
      "o": return "10";
      "s": return "09";
      "f": return "02";
      "a": return m[1] == "u" ? "08" : "04";
      "m": return m[3] == "y" ? "05" : "03";
      default: return m[2] == "a" ? "01" : m[3] == "l" ? "07" : "06";
    }
  };

  Ps = str.splitTrim(date, " ");

  return Ps[2] + getMonth(Ps[1]) + Ps[0];
};

