/// Lang table

import "cts";
import "data/user";

:file fpath = file.cat([cts.dataPath, "lang.tb"]);

/// Initializes table.
/// \ -> ()
init = \ -> {
  if (!fpath.exists())
    write("es");
};

/// Read users
/// \ -> s
read = \ -> return fpath.read();;

/// Write users.
/// \s -> ()
write = \lang -> fpath.write(lang);;
