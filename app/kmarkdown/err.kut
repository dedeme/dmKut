/// Error management.

File = [""];

// \s -> ()
setFile = \fpath -> File! = fpath;;

/// s, s -> ()
show = \msg, tx -> {
  tx2 = str.len(tx) > 50 ? tx[:47] + "..." : tx;
  sys.println(
    "--------------------------------------------------\n" +
    File! + ":\n" +
    msg +
    "\n---------- in:\n" +
    tx +
    "\n--------------------------------------------------"
  );
};


