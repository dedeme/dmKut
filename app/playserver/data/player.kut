/// Player data.

/// Create a <player> type map.
/// \<tcpConn> -> m<player>
new = \conn -> return { conn };;

///
error = \pl, msg -> {
  tcp.write(
    pl,
    js.wo({
      "type": js.ws("error"),
      "message": js.ws(msg)
    })
  );
  tcp.closeConnection();
};
