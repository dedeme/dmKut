// Dicrect
sys.println(str.fmt("e = %.15f", [math.exp(1.0)]));

// Functional
sys.println(str.fmt(
  "e = %.15f",
  [ iter.reduce([1 : 22], [1.0, 1.0], \P, x -> {
      flx = P[1] * math.itof(x);
      return [P[0] + (1.0 / flx), flx];
    })[0]
  ]
));

// Imperative
E = [1.0];
Fact = [1];
for (x = 1:20) {
  Fact! *= x;
  E! += 1.0 / math.itof(Fact!);
}
sys.println(str.fmt("e = %.15f", [E!]));
